{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    // src文件夹别名
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  // 不能在node_modules和打包dist文件夹中使用src别名
  "exclude": ["node_modules", "dist"]
}
